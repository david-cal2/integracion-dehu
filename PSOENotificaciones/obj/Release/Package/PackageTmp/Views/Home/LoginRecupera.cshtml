@{
    ViewBag.Title = "LoginRecupera";
}

<div class="acces-container__wrapper mail-container">
    <h2>Recuperar contraseña</h2>
    <p class="color_b">Enviaremos un correo a la dirección indicada con instrucciones para recuperar la clave.</p>
    <div class="acces-container__form">
        <label for="mail" class="form-label">Correo electrónico</label>
        <input type="email" class="form-control" id="mail" value="">
    </div>
    <div class="d-block mt-2">
        <button id="btn-enviar" class="btn btn-primary btn-disabled mt-4" type="submit">Enviar</button>
        <a href="~/Home/Login" style="margin-left: 15px;"><button id="button" class="btn btn-primary mt-4" type="submit">Volver</button></a>
    </div>
</div>

<!-- Modal error-->
<div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="false">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content errormodal__content">
            <div class="modal-body">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="modal-content__container">
                    <div class="modal-content__wrapper">
                        <span class="error-icon"></span>
                        <div class="modal-content__text">
                            <h4>Se ha producido un error</h4>
                            <p>No se ha realizado la acción.</p>
                        </div>
                    </div>
                    <button type="button" class="modal_button" data-bs-dismiss="modal" aria-label="Close">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal advertencia-->
<div class="modal fade" id="advertModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-body">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="modal-content__container">
                    <div class="modal-content__wrapper">
                        <span class="advert-icon"></span>
                        <div class="modal-content__text">
                            <h4>Email Incorrecto</h4>
                            <p>El email no esta registrado en el sistema.</p>
                        </div>
                    </div>
                    <button type="button" class="modal_button" data-bs-dismiss="modal" aria-label="Close">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal validado-->
<div class="modal fade" id="validModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content validmodal__content">
            <div class="modal-body">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                <div class="modal-content__container">
                    <div class="modal-content__wrapper">
                        <span class="valid-icon"></span>
                        <div class="modal-content__text">
                            <h4>Envio de email correcto</h4>
                            <p>Se ha enviado un email con instrucciones</p>
                        </div>
                    </div>
                    <div class="btn_container">
                        <button type="button" class="modal_button" data-bs-dismiss="modal" aria-label="Close">Aceptar</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/js/shared/layout.min.js"></script>
<script src="~/js/home/loginRecupera.js"></script>