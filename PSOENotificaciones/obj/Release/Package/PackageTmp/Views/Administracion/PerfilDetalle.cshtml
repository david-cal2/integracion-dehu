@{
    ViewBag.Title = "PerfilDetalle";
}

<div class="gn-body">
    <div class="gn-body-wrapper">
        <div class="body-aside">
            <div class="aside-wrapper">
                <aside class="aside">
                    <nav class="main-nav">
                        <ul>
                            <li>
                                <a href="~/Administracion/Usuarios">
                                    <span class="nav_item nav_item__user"></span>
                                    <span class="nav_text">Usuarios</span>
                                </a>
                            </li>
                            <li>
                                <a href="~/Administracion/Grupos">
                                    <span class="nav_item nav_item__groups"></span>
                                    <span class="nav_text">Grupos</span>
                                </a>
                            </li>
                            <li>
                                <a href="~/Administracion/Perfiles" class="active_menu">
                                    <span class="nav_item nav_item__profile"></span>
                                    <span class="nav_text">Perfiles</span>
                                </a>
                            </li>
                            <li>
                                <a href="~/Administracion/Organismos">
                                    <span class="nav_item nav_item__organisms"></span>
                                    <span class="nav_text">Organismos</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </aside>
            </div>
        </div>
        <div class="body-main">
            <div class="main-section">
                <div class="container-fluid mt-3 px-2">
                    <ul class="breadcrumbs">
                        <li><a href="">Administración</a></li>
                        <li><a href="~/Administracion/Perfiles">Perfiles</a></li>
                        <li><a href="">Editar perfil</a></li>
                    </ul>
                    <div class="content_title d-flex justify-content-between">
                        <h1 class="title_menu">Editar perfil</h1>
                    </div>
                    <div class="deltail-container profile-edit__container">
                        <div class="deltail-container__wrapper border-0 pb-0">
                            <div class="row">
                                <div class="col">
                                    <fieldset>
                                        <div class="input-wrapper">
                                            <label for="admin01" class="form-label me-3">Nombre</label>
                                            <input type="text" class="form-control" id="inputNombre">
                                        </div>
                                        <div class="mt-3 input-wrapper">
                                            <label for="admin02" class="form-label d-block me-3">Descripción</label>
                                            <textarea name="textarea" cols="70" rows="70" id="inputDescripcion"></textarea>
                                        </div>
                                        <div class="mt-3 input-wrapper">
                                            <dl>
                                                <dt>Accesos del perfil</dt>
                                                <dd>
                                                    <div class="d-flex align-items-end gap-3 mt-3 ">
                                                        <div class="dayweek-check">
                                                            <input class="styled-checkbox" id="styled-checkbox-1"
                                                                   type="checkbox" value="value1">
                                                            <label for="styled-checkbox-1">Notificaciones</label>
                                                        </div>
                                                        <div class="dayweek-check">
                                                            <input class="styled-checkbox" id="styled-checkbox-2"
                                                                   type="checkbox" value="value1">
                                                            <label for="styled-checkbox-2">Administración</label>
                                                        </div>
                                                        <div class="dayweek-check">
                                                            <input class="styled-checkbox" id="styled-checkbox-3"
                                                                   type="checkbox" value="value1">
                                                            <label for="styled-checkbox-3">Configuración</label>
                                                        </div>
                                                    </div>
                                                </dd>
                                            </dl>
                                        </div>
                                        <div class="input-wrapper mt-4">
                                            <label for="input06A" class="form-label d-block">Pantalla de inicio</label>
                                            <select class="form-select d-block" id="selectPantallasInicio">
                                                <option aria-disabled="true" value="">
                                                    Seleccionar
                                                </option>
                                            </select>
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                        </div>
                        <div class="deltail-container__wrapper pt-0">
                            <div class="row mt-4 mb-2 d-flex justify-content-between align-items-center">
                                <div class="col d-flex justify-content-start">
                                    <a href="">
                                        <button class="btn-primary me-4" id="btnAceptar">
                                            Guardar
                                        </button>
                                    </a>
                                    <a href="~/Administracion/Perfiles"><button class="btn-secondary">Cancelar</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modalPerfilEditado" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content validmodal__content">
            <div class="modal-body">
                <div class="modal-content__container">
                    <div class="modal-content__wrapper">
                        <span class="valid-icon"></span>
                        <div class="modal-content__text">
                            <h4>Administración - Perfiles</h4>
                            <p>Perfil editado correctamente.</p>
                        </div>
                    </div>
                    <a href="~/Administracion/Perfiles"><button type="button" class="modal_button" data-bs-dismiss="modal" aria-label="Close">Aceptar</button></a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="alertModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-body">
                <div class="modal-content__container">
                    <div class="modal-content__wrapper">
                        <span class="advert-icon"></span>
                        <div class="modal-content__text">
                            <h5 id="mensaje" style="padding: 5%;"></h5>
                        </div>
                    </div>
                    <button type="button" class="modal_button" data-bs-dismiss="modal" aria-label="Close">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var idPerfil = '@ViewBag.IdPerfil';
    var idPerfilEditar = '@ViewBag.IdPerfilEditar';
    var idTipoEnvios = '0';
</script>
<script src="~/js/shared/layout.min.js"></script>
<script src="~/js/administracion/perfilDetalle.js"></script>