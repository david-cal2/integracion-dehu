@{
    ViewBag.Title = "Usuarios";
}

<div class="gn-body">
    <div class="gn-body-wrapper">
        <div class="body-aside">
            <div class="aside-wrapper">
                <aside class="aside">
                    <nav class="main-nav">
                        <ul>
                            <li>
                                <a href="~/Administracion/Usuarios" class="active_menu">
                                    <span class="nav_item nav_item__user"></span>
                                    <span class="nav_text">Usuarios</span>
                                </a>
                            </li>
                            <li>
                                <a href="~/Administracion/Grupos">
                                    <span class="nav_item nav_item__groups"></span>
                                    <span class="nav_text">Grupos</span>
                                </a>
                            </li>
                            <li>
                                <a href="~/Administracion/Perfiles">
                                    <span class="nav_item nav_item__profile"></span>
                                    <span class="nav_text">Perfiles</span>
                                </a>
                            </li>
                            <li>
                                <a href="~/Administracion/Organismos">
                                    <span class="nav_item nav_item__organisms"></span>
                                    <span class="nav_text">Organismos</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </aside>
            </div>
        </div>
        <div class="body-main">
            <div class="main-section">
                <div class="container-fluid mt-3 px-2">
                    <ul class="breadcrumbs">
                        <li><a href="">Administración</a></li>
                        <li><a href="">Usuarios</a></li>
                    </ul>
                    <div class="content_title d-flex justify-content-between">
                        <h1 class="title_menu">Usuarios</h1>
                        <a href="~/Administracion/UsuarioNuevo" style="text-decoration: none;">
                            <button class="btn-primary" id="btnAgregar">Alta usuario</button>
                        </a>
                    </div>
                    <div class="table_container">
                        <div class="table_container__wrapper">
                            <table id="table"
                                   data-toggle="table"
                                   data-escape="false"
                                   data-pagination="true"
                                   data-search="true"
                                   data-show-export="true"
                                   data-export-types="['excel']"
                                   data-export-data-type="all"
                                   class="fixed_headers">
                                <thead>
                                    <tr>
                                        <th data-field="ID" data-visible="false">ID</th>
                                        <th data-field="Nombre" data-sortable="true">Nombre</th>
                                        <th data-field="Apellidos" data-sortable="true">Apellidos</th>
                                        <th data-field="NIF" data-sortable="true">NIF</th>
                                        <th data-field="Email" data-sortable="true">Email</th>
                                        <th data-field="Telefono" data-sortable="true">Teléfono</th>
                                        <th data-field="LoginUsuario" data-sortable="true">Login</th>
                                        <th data-field="Perfiles.Nombre" data-sortable="true">Perfil</th>
                                        <th data-field="CodigoHtmlActivo" data-force-hide="true">Activo</th>
                                        <th data-field="Activo" class="hidden">Activo</th>
                                        <th data-field="CodigoHtmlBloqueado" title="Bloqueado">Bloq</th>
                                        <th data-field="LoginNumeroIntentos">Intentos fallidos</th>
                                        <th data-field="FechaConsentimiento" data-formatter="dateFormatAll" title="Fecha Consentimiento Legal">Fecha Cons. Legal</th>
                                        <th data-field="CodigoHtmlEditar" data-force-hide="true"></th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="alertModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">Información</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h5 id="mensaje" style="padding:5%">Mensaje</h5>
            </div>
            <div class="modal-footer">
                <button id="btn-cerrar" data-bs-dismiss="modal" aria-label="Close">Aceptar</button>
            </div>
        </div>
    </div>
</div>

<script>
    var idPerfil = '@ViewBag.IdPerfil';
    var idTipoEnvios = '0';
</script>
<script src="~/js/shared/layout.min.js"></script>
<script src="~/js/administracion/usuarios.js"></script>