@{
    ViewBag.Title = "UsuarioDetalle";
}

<div class="gn-body">
    <div class="gn-body-wrapper">
        <div class="body-aside">
            <div class="aside-wrapper">
                <aside class="aside">
                    <nav class="main-nav">
                        <ul>
                            <li>
                                <a href="~/Administracion/UsuarioDetalle" class="active_menu">
                                    <span class="nav_item nav_item__mipfi"></span>
                                    <span class="nav_text">Mi perfil</span>
                                </a>
                            </li>
                            <li>
                                <a href="~/Administracion/UsuarioPass">
                                    <span class="nav_item nav_item__pass"></span>
                                    <span class="nav_text">Contraseña</span>
                                </a>
                            </li>
                            <li>
                                <a href="~/Administracion/UsuarioGrupos">
                                    <span class="nav_item nav_item__asigngroups"></span>
                                    <span class="nav_text">Grupos asignados</span>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </aside>
            </div>
        </div>
        <div class="body-main">
            <div class="main-section">

                <div class="container-fluid mt-3 px-2">
                    <ul class="breadcrumbs">
                        <li><a href="">Área de usuarios</a></li>
                        <li><a href="">Mi perfil</a></li>
                    </ul>
                    <div class="content_title title_detalle">
                        <h1 class="title_menu">Mi Perfil</h1>
                    </div>
                    <div class="deltail-container">
                        <div class="deltail-container__wrapper">
                            <div class="row">
                                <div class="col-2 me-4">
                                    <fieldset class="d-flex align-items-center">
                                        <div class="input-wrapper mb-2 w-100">
                                            <label for="nombre" class="form-label me-3">Nombre</label>
                                            <input type="text" class="form-control w-100" id="nombre" value="">
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-3 me-4">
                                    <fieldset class="d-flex align-items-center">
                                        <div class="input-wrapper mb-2 w-100">
                                            <label for="apellidos" class="form-label me-3">Apellidos</label>
                                            <input type="text" class="form-control w-100" id="apellidos" value="">
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-2 me-4">
                                    <fieldset class="d-flex align-items-center">
                                        <div class="input-wrapper mb-2 w-100">
                                            <label for="nif" class="form-label me-3">NIF</label>
                                            <input type="text" class="form-control w-100" id="nif" value="" maxlength="9">
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-2 me-4">
                                    <fieldset class="d-flex align-items-center">
                                        <div class="input-wrapper mb-2 w-100">
                                            <label for="usuario" class="form-label me-3">Usuario</label>
                                            <input type="text" class="form-control w-100" id="usuario" value="">
                                        </div>
                                    </fieldset>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col-3 me-4">
                                    <fieldset class="d-flex align-items-center">
                                        <div class="input-wrapper mb-2 w-100">
                                            <label for="mail" class="form-label me-3">Email</label>
                                            <input type="text" class="form-control w-100" id="mail" value="" maxlength="50">
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-3 me-4">
                                    <fieldset class="d-flex align-items-center">
                                        <div class="input-wrapper mb-2 w-100">
                                            <label for="usuario" class="form-label me-3">Teléfono</label>
                                            <input type="text" class="form-control w-100" id="telefono" value="" maxlength="50">
                                        </div>
                                    </fieldset>
                                </div>
                                <div class="col-2">
                                    <dl>
                                        <dt class="labelformat">Perfil</dt>
                                        <dd class="ddformat" id="perfil">Administrador</dd>
                                    </dl>
                                </div>
                            </div>
                            <div class="row mt-2">
                                <div class="col d-flex mt-3">
                                    <a href=""><button class="btn-primary me-4" id="btn-guardar">Aceptar</button></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="alertModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-body">
                <div class="modal-content__container">
                    <div class="modal-content__wrapper">
                        <span class="advert-icon"></span>
                        <div class="modal-content__text">
                            <h5 id="mensaje" style="padding: 5%;"></h5>
                        </div>
                    </div>
                    <button type="button" class="modal_button" data-bs-dismiss="modal" aria-label="Close">Aceptar</button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    var idPerfil = '@ViewBag.IdPerfil';
    var idTipoEnvios = '0';
</script>
